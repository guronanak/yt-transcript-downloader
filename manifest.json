{
    "manifest_version": 2,
    "name": "Transcript Downloader",
    "version": "0.1",
    "description": "Print transcripts from youtube videos to developer console.",
    "icons": {
        "48": "icons/arrow-outline-down.svg"
    },
    "browser_action": {
        "default_icon": "icons/arrow-outline-down-dl.svg",
        "default_title": "Transcript Downloader"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "download.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions":[
        "tabs",
        "*://youtube.com/*",
        "clipboardWrite"
    ]
}